{
  "openapi": "3.1.0",
  "info": {
    "title": "Frankie Memory API (Supabase Edge Functions)",
    "version": "1.1.0"
  },
  "servers": [
    {
      "url": "https://cmxpgcizhhhxvogyhpmp.supabase.co/functions/v1/frankie"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  },
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/memory": {
      "post": {
        "operationId": "frankie_store_memory",
        "summary": "Store a memory entry",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemoryInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/MemoryEntry"
                }
              }
            }
          }
        }
      },
      "get": {
        "operationId": "frankie_retrieve_memory",
        "summary": "Retrieve memory entries",
        "parameters": [
          {
            "in": "query",
            "name": "memory_content",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "tags",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "protocol",
            "schema": {
              "type": "string"
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer"
            }
          },
          {
            "in": "query",
            "name": "offset",
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of memories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MemoryEntry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory_direct": {
      "post": {
        "operationId": "frankie_store_memory_direct",
        "summary": "Store a memory entry (trusted insert)",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/MemoryInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success"
          }
        }
      }
    },
    "/memory_by_tags": {
      "get": {
        "operationId": "frankie_filter_by_tags",
        "summary": "Get memories by tags",
        "parameters": [
          {
            "in": "query",
            "name": "tags",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of memories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MemoryEntry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory_search": {
      "get": {
        "operationId": "frankie_search_memory_content",
        "summary": "Full-text search memory content",
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Search results",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MemoryEntry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory_fuzzy": {
      "get": {
        "operationId": "frankie_fuzzy_search",
        "summary": "Fuzzy search memory content",
        "parameters": [
          {
            "in": "query",
            "name": "q",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "query",
            "name": "threshold",
            "schema": {
              "type": "number",
              "default": 0.3
            }
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of memories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MemoryEntry"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory_recent_per_tag": {
      "get": {
        "operationId": "frankie_recent_per_tag",
        "summary": "Most recent memory per tag",
        "responses": {
          "200": {
            "description": "List of recent memories per tag",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/RecentPerTag"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/memory_semantic": {
      "get": {
        "operationId": "frankie_semantic_search",
        "summary": "Semantic search memories",
        "parameters": [
          {
            "in": "query",
            "name": "query",
            "schema": {
              "type": "string"
            },
            "required": true
          },
          {
            "in": "query",
            "name": "threshold",
            "schema": {
              "type": "number",
              "default": 0.5
            }
          },
          {
            "in": "query",
            "name": "count",
            "schema": {
              "type": "integer",
              "default": 10
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of memories",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/MemoryEntry"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "MemoryInput": {
        "type": "object",
        "required": [
          "memory_content",
          "tags"
        ],
        "properties": {
          "memory_content": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "protocol": {
            "type": "string"
          },
          "embedding": {
            "type": "array",
            "items": {
              "type": "number"
            }
          }
        }
      },
      "MemoryEntry": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          },
          "memory_content": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "protocol": {
            "type": "string"
          },
          "tags_flat": {
            "type": "string"
          },
          "content_tsv": {
            "type": "string"
          },
          "embedding": {
            "type": "array",
            "items": {
              "type": "number"
            },
            "description": "Vector embedding (1536-dim) for semantic search"
          },
          "similarity": {
            "type": "number"
          },
          "distance": {
            "type": "number"
          }
        }
      },
      "RecentPerTag": {
        "type": "object",
        "properties": {
          "tag": {
            "type": "string"
          },
          "id": {
            "type": "integer"
          },
          "memory_content": {
            "type": "string"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "protocol": {
            "type": "string"
          }
        }
      }
    }
  }
}
